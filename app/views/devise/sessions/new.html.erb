<div id = 'logIn'>
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, class: "form_label_styling" %><br />
    <%= f.email_field :email, id: "field_styling", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "form_label_styling" %><br />
    <%= f.password_field :password, id: "field_styling", autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "form_label_styling" %>
    </div>
  <% end -%>

  <div class="actions">
    <br/>
    <%= f.submit "Log in", class: "button" %>
  <!-- </div -->
<% end %>
<br/>

<!-- </div> -->
