<div id = 'signUp'>
<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email, class: "form_label_styling" %><br />
    <%= f.email_field :email, id: "field_styling", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password, class: "form_label_styling" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, id: "field_styling", autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, class: "form_label_styling" %><br />
    <%= f.password_field :password_confirmation, id: "field_styling", autocomplete: "off" %>
  </div>

  <div class="actions">
    <br/>
    <%= f.submit "Sign up", class: "button" %>
  </div>
<% end %>
<br/>
<!-- <button id='standardbutton'><%= render "devise/shared/links" %></button> -->
</div>
